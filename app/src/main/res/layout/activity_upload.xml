<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent" >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_register"
    android:orientation="vertical"
    android:padding="10dp" >


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_register"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageButton
            android:id="@+id/btnpic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitStart"
            android:src="@drawable/picupload" />

        <ImageView
            android:id="@+id/products_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/products_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:hint="상품명을 입력해주세요"
        android:inputType="textCapWords"
        android:padding="10dp"
        android:singleLine="true"
        android:textColorHint="@color/input_login_hint" />

    <EditText
        android:id="@+id/products_price"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:hint="상품가격(단위:원)"
        android:inputType="textCapWords"
        android:padding="10dp"
        android:singleLine="true"
        android:textColorHint="@color/input_login_hint" />

    <EditText
        android:id="@+id/products_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:hint="상세설명을 입력해주세요"
        android:inputType="textMultiLine"
        android:maxLines="15"
        android:minLines="8"
        android:padding="10dp"
        android:scrollbars="vertical"
        android:textColorHint="@color/input_login_hint" />

    <TextView
        android:id="@+id/products_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        android:text="카테고리 선택"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@color/input_login_hint" />

    <Button
        android:id="@+id/products_upload"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/btn_logut_bg"
        android:text="상품 업로드"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginTop="50dp"
        android:textSize="15dp" />

</LinearLayout>

</ScrollView>